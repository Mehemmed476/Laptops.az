@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Razor.Language
@using Microsoft.CodeAnalysis.Elfie.Model.Map
@using Microsoft.CodeAnalysis.Elfie.Model.Tree
@model ICollection<LaptopsAz.PL.Areas.MexfiErazi.ViewModels.CheckoutVMs.CheckoutWithProductsVM>
@{ int i = 1; }
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">Sifarişlər</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                                <li class="breadcrumb-item active">Sifarişlər</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">Sifarişlər</h4>

                            <div>
                                <a type="button" class="btn btn-success mr-4" asp-area="MexfiErazi" asp-controller="Checkout" asp-action="Finished">
                                    Tamamlanmış Sifarişlər
                                </a>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="table-responsive">
                                <table class="table table-editable table-nowrap align-middle table-edits">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ad Soyad</th>
                                        <th>Elaqə Nömrəsi</th>
                                        <th>Email</th>
                                        <th>Adres</th>
                                        <th>Qeydlər</th>
                                        <th>Sifariş olunan Məhsullar</th>
                                        <th>Options</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var modalId = $"modal-{item.Id}";
                                        <tr>
                                            <td data-field="id" style="width: 80px">@i</td>
                                            <td data-field="name">@item.FirstName @item.LastName</td>
                                            <td data-field="phone">@item.Phone</td>
                                            <td data-field="email">@item.Email</td>
                                            <td data-field="adres">@item.Address</td>
                                            <td data-field="notes">@item.Notes</td>
                                            <td data-field="notes">
                                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@modalId">
                                                    Məhsullar
                                                </button>
                                            </td>
                                            <td style="width: 100px">
                                                <a asp-controller="Checkout" asp-action="FinishTag" asp-route-id="@item.Id"
                                                   class="btn btn-warning btn-rounded waves-effect waves-light">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                                <a asp-controller="Checkout" asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-danger btn-rounded waves-effect waves-light">
                                                    <i class="fa-solid fa-delete-left"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <!-- Modal -->
                                        <div class="modal fade" id="@modalId" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Məhsullar</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Bağla"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @if (item.ProductNames != null && item.ProductNames.Any())
                                                        {
                                                            <ul>
                                                                @foreach (var product in item.ProductNames)
                                                                {
                                                                    <li>@product</li>
                                                                }
                                                            </ul>
                                                        }
                                                        else
                                                        {
                                                            <p>Məhsul yoxdur.</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <p style="display: none;">@(i ++)</p>
                                    }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Laptops.az
                </div>
            </div>
        </div>
    </footer>
</div>


        

