@model ICollection<ProductGetDto>
@{ int i = 1; }
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">MÉ™hsullar</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                                <li class="breadcrumb-item active">MÉ™hsullar</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">MÉ™hsul</h4>
                            <div>
                                <a type="button" class="btn btn-warning mr-4" asp-area="MexfiErazi" asp-controller="Product" asp-action="Trash">
                                    Trash <i class="fa-solid fa-trash"></i>
                                </a>
                                <a type="button" class="btn btn-success" asp-area="MexfiErazi" asp-controller="Product" asp-action="Create">
                                    Create <i class="fa-solid fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="table-responsive">
                                <table class="table table-editable table-nowrap align-middle table-edits">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Discount Price</th>
                                        <th>Stock</th>
                                        <th>Image</th>
                                        <th>Options</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td data-field="id" style="width: 80px">@i</td>
                                            <td data-field="name">@item.ProductName</td>
                                            <td data-field="price">@item.Price</td>
                                            <td data-field="discountPrice">@item.DiscountPrice</td>
                                            <td data-field="stock">@item.Stock</td>
                                            <td data-field="age">
                                                <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#imageModal-@item.Id">
                                                    <button class="btn btn-dark btn-rounded waves-effect waves-light mt-1" disabled>
                                                        <i class="fa-solid fa-image"></i>
                                                    </button>
                                                </a>
                                                <!-- Modal -->
                                                <div class="modal fade" id="imageModal-@item.Id" tabindex="-1" aria-labelledby="imageModalLabel-@item.Id" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="imageModalLabel-@item.Id">@item.ProductName</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body text-center">
                                                                <img src="~/Uploads/@item.ImageURL" class="img-fluid" alt="@item.ProductName" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td style="width: 100px">
                                                <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id"
                                                   class="btn btn-primary btn-rounded waves-effect waves-light">
                                                    <i class="fa-solid fa-pen"></i>
                                                </a>
                                                <a asp-controller="Product" asp-action="SoftDelete" asp-route-id="@item.Id"
                                                   class="btn btn-warning btn-rounded waves-effect waves-light">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-danger btn-rounded waves-effect waves-light">
                                                    <i class="fa-solid fa-delete-left"></i>
                                                </a>
                                                <a href="javascript:void(0);" data-id="@item.Id"
                                                   class="btn btn-info btn-rounded waves-effect waves-light btn-detail">
                                                    <i class="fa-solid fa-info"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <p style="display: none;">@(i ++)</p>
                                    }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> Â© Laptops.az
                </div>
            </div>
        </div>
    </footer>
    <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" id="detailModalContent">
                <!-- AJAX ile iÃ§erik yÃ¼klenecek -->
            </div>
        </div>
    </div>
</div>

<!-- ðŸ“Œ AJAX ile Modal Ä°Ã§eriÄŸini YÃ¼kle -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $(document).on("click", ".btn-detail", function () {
            var productId = $(this).data("id");

            $.ajax({
                url: "/MexfiErazi/Product/Detail/" + productId,
                type: "GET",
                success: function (data) {
                    $("#detailModalContent").html(data);
                    $("#detailModal").modal("show");
                },
                error: function () {
                    alert("Error loading category details.");
                }
            });
        });
    });
</script>

