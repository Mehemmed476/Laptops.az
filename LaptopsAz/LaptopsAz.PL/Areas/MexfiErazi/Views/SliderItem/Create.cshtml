@model LaptopsAz.BL.DTOs.SliderItemDtos.SliderItemPostDto;
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">Control Panel - Create Form</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">SliderItem</a></li>
                                <li class="breadcrumb-item active">Create</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">Create SliderItem</h2>
                        </div>
                        <div class="card-body p-4">

                            <div class="row">
                                <form method="post" enctype="multipart/form-data">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label asp-for="SmallTitle" class="form-label">Small Title</label>
                                            <input asp-for="SmallTitle" class="form-control" type="text" id="title-input">
                                            <span asp-validation-for="SmallTitle" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="LargeTitle" class="form-label">Large Title</label>
                                            <input asp-for="LargeTitle" class="form-control" type="text" id="title-input">
                                            <span asp-validation-for="LargeTitle" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Description" class="form-label">Description</label>
                                            <input asp-for="Description" class="form-control" type="text" id="title-input">
                                            <span asp-validation-for="Description" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Image" for="file-upload" class="form-label">Upload File</label>
                                            <input asp-for="Image" class="form-control" type="file" id="file-upload" multiple>
                                            <span asp-validation-for="Image" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="CategoryID" class="form-label">Category</label>
                                            <select asp-for="CategoryID" class="form-select">
                                                <option value="">Select</option>
                                                @foreach (var item in Model.Categories)
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 mt-5">
                                        <button type="submit" class="btn btn-success btn-lg waves-effect waves-light">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> Â© Laptops.az
                </div>
                
            </div>
        </div>
    </footer>
</div>
<!-- end main content-->
