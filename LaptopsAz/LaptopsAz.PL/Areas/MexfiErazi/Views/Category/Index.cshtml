@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Razor.Language
@using Microsoft.CodeAnalysis.Elfie.Model.Map
@using Microsoft.CodeAnalysis.Elfie.Model.Tree
@model ICollection<CategoryGetDto>
@{ int i = 1; }
<div class="main-content">
            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0 font-size-18">Kateqoriyalar</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                                        <li class="breadcrumb-item active">Kateqoriyalar</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h4 class="card-title mb-0">Kateqoriya</h4>
                                    <div>
                                        <a type="button" class="btn btn-warning mr-4" asp-area="MexfiErazi" asp-controller="Category" asp-action="Trash">
                                            Trash <i class="fa-solid fa-trash"></i>
                                        </a>
                                        <a type="button" class="btn btn-success" asp-area="MexfiErazi" asp-controller="Category" asp-action="Create">
                                            Create <i class="fa-solid fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
    
                                    <div class="table-responsive">
                                        <table class="table table-editable table-nowrap align-middle table-edits">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Title</th>
                                                    <th>Created Date</th>
                                                    <th>Image</th>
                                                    <th>TopCategory</th>
                                                    <th>Options</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td data-field="id" style="width: 80px">@i</td>
                                                        <td data-field="name">@item.CategoryName</td>
                                                        <td data-field="createdAt">@item.CreatedAt</td>
                                                        <td data-field="age">
                                                            <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#imageModal-@item.Id">
                                                                <button class="btn btn-dark btn-rounded waves-effect waves-light mt-1" disabled>
                                                                    <i class="fa-solid fa-image"></i>
                                                                </button>
                                                            </a>
                                                            <!-- Modal -->
                                                            <div class="modal fade" id="imageModal-@item.Id" tabindex="-1" aria-labelledby="imageModalLabel-@item.Id" aria-hidden="true">
                                                                <div class="modal-dialog modal-dialog-centered">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title" id="imageModalLabel-@item.Id">@item.CategoryName</h5>
                                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                        </div>
                                                                        <div class="modal-body text-center">
                                                                            <img src="~/Uploads/@item.ImageURL" class="img-fluid" alt="@item.CategoryName" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td data-field="isTop">
                                                            @if (@item.IsTop)
                                                            {
                                                                <span style="color: green; position: relative; left: 20px; font-size: 30px;">✔️</span>
                                                            }
                                                            else
                                                            {
                                                                <span style="color: green; position: relative; left: 20px; font-size: 30px;">❌</span>
                                                            }
                                                        </td>
                                                        <td style="width: 100px">
                                                            <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id"
                                                               class="btn btn-primary btn-rounded waves-effect waves-light">
                                                                <i class="fa-solid fa-pen"></i>
                                                            </a>
                                                            <a asp-controller="Category" asp-action="SoftDelete" asp-route-id="@item.Id"
                                                               class="btn btn-warning btn-rounded waves-effect waves-light">
                                                                <i class="fa-solid fa-trash"></i>
                                                            </a>
                                                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                                                               class="btn btn-danger btn-rounded waves-effect waves-light">
                                                                <i class="fa-solid fa-delete-left"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <p style="display: none;">@(i ++)</p>
                                                }
                                            </tbody>
                                            </table>
                                    </div>
    
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->
                    
                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

            
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <script>document.write(new Date().getFullYear())</script> © Laptops.az
                        </div>
                    </div>
                </div>
            </footer>
        </div>
<!-- Modal -->
<div class="modal fade" id="deleteErrorModal" tabindex="-1" role="dialog" aria-labelledby="deleteErrorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteErrorModalLabel">Xəta</h5>
            </div>
            <div class="modal-body">
                @TempData["CategoryDeleteError"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Bağla"></button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var error = '@TempData["CategoryDeleteError"]';
        if (error) {
            var myModal = new bootstrap.Modal(document.getElementById('deleteErrorModal'));
            myModal.show();
        }
    });
</script>
