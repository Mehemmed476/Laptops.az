@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Razor.Language
@using Microsoft.CodeAnalysis.Elfie.Model.Map
@using Microsoft.CodeAnalysis.Elfie.Model.Tree
@model ICollection<ReviewGetDto>
@{ int i = 1; }
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">Kommentlər</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                                <li class="breadcrumb-item active">Kommentlər</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">Komment</h4>
                            <div>
                                <a type="button" class="btn btn-warning mr-4" asp-area="MexfiErazi" asp-controller="Review" asp-action="Trash">
                                    Trash <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="table-responsive">
                                <table class="table table-editable table-nowrap align-middle table-edits">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>User</th>
                                        <th>Created Date</th>
                                        <th>Comment</th>
                                        <th>Options</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td data-field="id" style="width: 80px">@i</td>
                                            <td data-field="name">@item.FirstName @item.LastName</td>
                                            <td data-field="createdAt">@item.CreatedAt</td>
                                            <td data-field="comment">@item.Comment</td>
                                            <td style="width: 100px">
                                                <a asp-controller="Review" asp-action="SoftDelete" asp-route-id="@item.Id"
                                                   class="btn btn-warning btn-rounded waves-effect waves-light">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                                <a asp-controller="Review" asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-danger btn-rounded waves-effect waves-light">
                                                    <i class="fa-solid fa-delete-left"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <p style="display: none;">@(i ++)</p>
                                    }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Laptops.az
                </div>
            </div>
        </div>
    </footer>
</div>
        

